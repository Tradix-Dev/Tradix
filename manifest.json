{
  "manifest_version": 3,
  "name": "Tradix",
  "version": "0.1.0",
  "description": "Automated Solana copy trading.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.solana.com/*",
    "https://*.raydium.io/*",
    "https://*.jup.ag/*",
    "https://*.birdeye.so/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tradix",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.solana.com/*",
        "https://*.raydium.io/*",
        "https://*.jup.ag/*",
        "https://*.birdeye.so/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
